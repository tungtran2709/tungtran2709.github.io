<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="30dp"
            android:text="Forgot Password"
            android:textSize="50dp"
            android:textColor="@color/red"
            android:fontFamily="cursive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/forgot_pass"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/custom_person_icon"
            android:id="@+id/name_forgot"
            android:layout_marginTop="50dp"
            app:hintTextColor="@color/red"
            android:layout_width="350dp"
            android:layout_height="60dp">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Tên đăng nhập"
                android:backgroundTint="#00FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/custom_phone_icon"
            android:id="@+id/phone_forgot"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/red"
            android:layout_width="350dp"
            android:layout_height="60dp">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="phone"
                android:hint="Số điện thoại"
                android:backgroundTint="#00FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/custom_mail_icon"
            android:id="@+id/mail_forgot"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/red"
            android:layout_width="350dp"
            android:layout_height="60dp">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Mail"
                android:backgroundTint="#00FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/search_forgot"
            android:text="Tìm mật khẩu"
            android:textColor="@color/black"
            android:backgroundTint="#FFB4FF"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="60dp"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/agian_login_forgot"
            android:textColor="@color/black"
            android:backgroundTint="#FCE6E6E6"
            android:text="Hủy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>