<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="30dp"
            android:text="Change Password"
            android:textSize="50dp"
            android:textColor="@color/red"
            android:fontFamily="cursive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/change_pass"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/custom_pass_icon"
            android:id="@+id/pass_change"
            app:hintTextColor="@color/red"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="50dp"
            android:layout_width="300dp"
            android:layout_height="60dp">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textPassword"
                android:hint="Mật khẩu hiện tại"
                android:backgroundTint="#00FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/custom_pass_icon"
            android:id="@+id/pass_new_change"
            app:hintTextColor="@color/red"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/custom_pass_icon"
            android:id="@+id/pass_new_agian_change"
            app:hintTextColor="@color/red"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textPassword"
                android:hint="Xác nhận mật khẩu mới"
                android:backgroundTint="#00FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/change_change"
            android:text="Đổi mật khẩu"
            android:textColor="@color/black"
            android:backgroundTint="#FFB4FF"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="60dp"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/back_change"
            android:backgroundTint="#FCE6E6E6"
            android:textColor="@color/black"
            android:text="Hủy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>