<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Update Product"
            android:textSize="50dp"
            android:fontFamily="cursive"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_pro_up"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/add_product"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:text="Loại sản phẩm:"
                android:drawablePadding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/type_pro_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <EditText
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_edit_text"
            android:layout_gravity="center"
            android:id="@+id/name_pro_up"
            android:textSize="20dp"
            android:hint="Tên sản phẩm"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/custom_product_icon" />

        <EditText
            android:id="@+id/count_pro_up"
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/custom_count_icon"
            android:drawablePadding="10dp"
            android:hint="Số lượng"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20dp" />
        <EditText
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_edit_text"
            android:layout_gravity="center"
            android:id="@+id/price_pro_up"
            android:textSize="20dp"
            android:hint="Giá"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/custom_price_icon" />
        <EditText
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_edit_text"
            android:layout_gravity="center"
            android:id="@+id/date_pro_up"
            android:textSize="20dp"
            android:hint="Ngày tạo"
            android:inputType="date"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/custom_date_icon" />

        <EditText
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_edit_text"
            android:layout_gravity="center"
            android:id="@+id/des_pro_up"
            android:textSize="20dp"
            android:hint="Mô tả"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/custom_des_icon" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textColor="@color/black"
                android:backgroundTint="#FFB4FF"
                android:layout_gravity="center"
                android:text="Lưu"
                android:id="@+id/save_pro_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textColor="@color/black"
                android:backgroundTint="#FCE6E6E6"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:text="Hủy"
                android:id="@+id/back_pro_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>